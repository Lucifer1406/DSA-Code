class Solution:
    def findMaxAverage(self, nums: List[int], k: int) -> float:
        sumNums=sum(nums[:k])
        mx=sumNums

        for i in range(k,len(nums)):
            sumNums=sumNums+nums[i]-nums[i-k]
            mx=max(mx,sumNums)

        return float(mx/k)

