# cook your dish here
def main():
    cases = int(input())
    for _ in range(cases):
        n = int(input())
        if n == 2:
            print("-1")
        elif n % 2 == 1:
            for i in range(1, n + 1):
                print(i, end=" ")
            print()
        else:
            print("2 3 1 4", end=" ")
            for i in range(5, n + 1):
                print(i, end=" ")
            print()

if __name__ == "__main__":
    main()
