class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:

        start=0
        zeroCount=0
        mx=0
        n=len(nums)
        for end in range(n):
            if nums[end]==0:
                zeroCount+=1

            while(zeroCount>k):
                if(nums[start]==0):
                    zeroCount-=1
                start+=1

            mx=max(mx,end-start+1)

        return mx
        


        
